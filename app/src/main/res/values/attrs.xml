<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextInput">
        <attr name="textColorHint" format="color"/>
        <attr name="textColorHintFocused" format="color"/>
        <attr name="underlineColor" format="color"/>
        <attr name="focusHintSize" format="dimension"/>
        <attr name="textSize" format="dimension"/>
        <attr name="inputType" format="enum">
            <enum name="text" value="1"/>
            <enum name="textEmail" value="32"/>
            <enum name="password" value="128"/>
            <enum name="number" value="2"/>
        </attr>
        <attr name="textColor" format="color"/>
        <attr name="textHint" format="string"/>
    </declare-styleable>
</resources>